@model Candidate
<div class="display-6">
    Apply
</div>
<form method="post" asp-controller="course" asp-action="apply">
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20" selected>20</option>
            <option value="21">21</option>
            <option value="22">22</option>
        </select>
    </div>
    <div class="form-group my-2">
        <fieldset>
            <legend>Select One Course</legend>
            <p>
                <input value="ASP.NET Core MVC" type="radio" asp-for="SelectedCourse" checked />
                <label>ASP.NET Core MVC</label>
            </p>
            <p>
                <input value="ASP.NET Core API" type="radio" asp-for="SelectedCourse" />
                <label>ASP.NET Core API</label>
            </p>
            <p>
                <input value="Blazor" type="radio" asp-for="SelectedCourse" />
                <label>Blazor</label>
            </p>
        </fieldset>
    </div>

    <div class="form-group my-2">
        <button class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" asp-controller="home">Home</a>
    </div>

</form>